{{! project card }}

<div class='container w-50 justify-content-center'>
  <div class='card text-white bg-success mb-3' style='max-width: 20rem;'>
    <div class='card-body'>
      <h4 class='card-title text-center'>{{title}}</h4>
      <p class='card-text'>{{description}}</p>
      <div class='card-footer'>
        <p>Created by {{user.name}} on {{format_date date_created}}</p>
      </div>
    </div>
    <h4 class='text-center'>Comments:</h4>
    <div id="commentsContainer">
      {{#each comments}}
        <p class='text-center'>{{this.text}}</p>
        <div class='card-footer'>
          <p>Commented by:
            {{this.user.name}}
            on
            {{format_date date_created}}
          </p>
        </div>
      {{/each}}
    </div>
  </div>
  <button class='btn btn-primary' id='clickComment'>Comment/Update Project</button>
  {{!-- <button class='btn btn-primary' id='clickUpdate'>Update</button> --}}
</div>

{{!-- USER add Comment form --}}
<div class="container d-flex justify-content-center">
<div class="comment-form-container hidden" id="commentContainer" >   
    <form class="form comment-form" id="comment-form">
        <div class="form-group">
            <h2 id="commentFormHeader">
              <label for="comment" class="form-label mt-4 text-dark">Add Comment:</label>
            </h2>
            <div>
      <textarea class="form-control" id="commentInput" type="text" rows="3"></textarea>
        <div class="form-group">
            <button class="btn btn-dark" type='click' id="commentButton" type="click" data-comment-btn={{id}}>Add Comment</button>
        </div>
    </form>
</div>
</div>


{{!-- USER Update form --}}
<div class="container d-flex justify-content-center">
<div class="update-form-container hidden" id="updateContainer" >   
    <form class="form update-form" id="update-form">
        <div class="form-group">
            <h2 id="updateFormHeader">
              <label for="update" class="form-label mt-4 text-dark">Update Project:</label>
            </h2>
            <div>
      <textarea class="form-control" id="updateInput" type="text" rows="3"></textarea>
        <div class="form-group">
            <button class="btn btn-dark" id="updateButton" type="click" data-update-btn='{{id}}'>Update Project</button>
        </div>
    </form>
</div>
</div>


<script src='/js/comment.js'></script>
<script src='/js/update.js'></script>
